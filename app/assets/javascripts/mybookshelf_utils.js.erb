MyBookshelfUtil.getVatDescription = function()
{
    var description = $("#vat-options").find('option:selected').text();
    switch(description)
    {
       case '5%':
           return 'VAT Inclusive';
       break;

       case 'Exempt':
           return 'VAT Exempted';
       break;

       default:
           return 'VAT Inclusive';
       break;
    }
}
MyBookshelfUtil.getFivePercentVat = function(amount)
{
   console.log("The amount is" + amount);
   return (amount * 0.05);
}
MyBookshelfUtil.getPricePreview = function(amount)
{
   var description = $("#vat-options").find('option:selected').text();
   var amt = parseInt(amount).toFixed();
   console.log(amount);
    switch(description)
    {
       case '5%':
           return amt + MyBookshelfUtil.getFivePercentVat(amt);
       break;

       case 'Exempt':
           return amt;
       break;

       default:
           return amt + MyBookshelfUtil.getFivePercentVat(amt);
