<% provide(:title, "Dashboard") %>
<% content_for :modals do %>
       <%= render 'layouts/merchants/modals/page_loading' %>
<% end %>
<section id="content">
                    <section class="vbox">
                        <section class="scrollable padder">
                            <div class="m-b-md">
                                <h3 class="m-b-none">Sell A Book</h3> 
                            </div>
                  <div id="tmm-form-wizard" class="substrate">
                    <div class="row stage-container">

                        <div class="stage tmm-current col-md-4 col-sm-4">
                            <div class="stage-header head-icon"><i class="fa fa-paper-plane add-nav-margin-white"> </i></div>
                            <div class="stage-content">
                                <h3 class="stage-title">Pick Your Category</h3>
                                <div class="stage-info">
                                    Select the Category of Book you want to sell
                                </div> 
                            </div>
                        </div><!--/ .stage-->

                        <div class="stage col-md-4 col-sm-4">
                            <div class="stage-header head-icon"><i class="fa fa-book add-nav-margin-black"> </i></div>

                            <div class="stage-content">
                                <h3 class="stage-title">Descibe Your Book</h3>
                                <div class="stage-info">
                                    A good description makes it easy for buyers to find you
                                </div>
                            </div>
                        </div><!--/ .stage-->

                        

                        <div class="stage col-md-4 col-sm-4">
                            <div class="stage-header head-icon"><i class="fa fa-eye add-nav-margin-black"> </i></div>
                            <div class="stage-content">
                                <h3 class="stage-title">Review And Confirm</h3>
                                <div class="stage-info">
                                    Review and confirm your entries
                                </div> 
                            </div>
                        </div><!--/ .stage-->

                    </div><!--/ .row-->
                  </div>
                            <section class="panel panel-default">
                                <header class="panel-heading font-bold">Pick a Category</header>
                                <div class="panel-body">
                                    <p class="move-text-center">To guarantee a quick listing in MyBookshelf, select the type of book you want to sell from the list our books categories</p>

                                    <%= form_for(:categories, url: merchants_categories_path, remote: true, html: {class: "form-horizontal"}) do|f| %>
                                        <!-- Categories Section -->
                                        <div class="col-lg-4 m-l-n">
                                            <p class="category-label">Category</p>
                                        <%= f.select :name, Category.where(parent_id: 0).order(:name).collect {|p| [ p.name, p.id ] }, {}, {multiple: true, class: "form-control", size: "10", id: "categories" } %>
                                        </div>

                                        <!-- Sub Categories Section -->
                                        <div class="col-lg-4 m-l-n">
                                            <p class="category-label">Sub-Category</p>
                                            <div id="sub-categories-holder">
                                                
                                            </div>
                                        </div>
                                    <% end %>
                                    
                                </div>
                            </section>
                        </section>
                    </section>
                    <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen,open" data-target="#nav,html"></a>
                </section>