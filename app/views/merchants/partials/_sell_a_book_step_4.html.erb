<section class="panel panel-default set-book-cover-section-margin-top">
    <header class="panel-heading font-bold">Review and Confirm Your Entries</header>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12">
               <section class="panel panel-default">
                                <header class="panel-heading font-bold">Book Description</header>
                                <div class="panel-body">
                                    <%= form_for(:complete_upload, url: merchants_complete_upload_path, remote: true, html: { class: "form-horizontal", id: "complete-upload" }) do|f| %>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>Category:</strong></label>
                                            <div class="col-sm-10">
                                                <div class="pull-left control-label"><%= category.name if category.name.present? %></div>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>Book Type</strong></label>
                                            <div class="col-sm-10">
                                                <div class="pull-left control-label"><%= ProductsType.find(description.products_type_id).product_type if description.products_type_id.present? && !description.nil? %></div>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>Book Title</strong></label>
                                            <div class="col-sm-10">
                                                <div class="pull-left control-label"><%= description.title if description.title.present? && !description.nil? %></div>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>Author</strong></label>
                                            <div class="col-sm-10">
                                                <div class="pull-left control-label"><%= description.author.capitalize if description.author.present? && !description.nil? %></div>
                                            </div>
                                        </div>
 
                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>Publisher</strong></label>
                                            <div class="col-sm-10">
                                                <div class="pull-left control-label"><%= description.publisher if description.publisher.present? && !description.nil? %></div>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>Date Published</strong></label>
                                            <div class="col-sm-10">
                                                <div class="pull-left control-label"><%= description.publish_date if description.publish_date.present? && !description.nil? %></div>
                                            </div>
                                        </div>


                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>ISBN</strong></label>
                                            <div class="col-sm-10">
                                                <div class="pull-left control-label"><%= description.isbn if description.isbn.present? && !description.nil? %></div>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>VAT Option</strong></label>
                                            <div class="col-sm-10">
                                                <div class="pull-left control-label"><%= VatOption.find(description.vat_option_id).name if description.vat_option_id.present? && !description.nil? %></div>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>Price &#8358;</strong></label>
                                            <div class="col-sm-10">
                                                <div class="pull-left control-label"><%= description.price if description.price.present? && !description.nil? %></div>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>Special Price &#8358;</strong></label>
                                            <div class="col-sm-10">
                                                <div class="pull-left control-label"><%= description.special_price if description.special_price.present? && !description.nil? %></div>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>Description</strong></label>
                                            <div class="col-sm-10">
                                                <div class=""><%= raw(description.description) if description.description.present? && !description.nil? %></div>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label"><strong>Quantity</strong></label>
                                            <div class="col-sm-10">
                                                <div class="pull-left control-label"><%= description.quantity if description.quantity.present? && !description.nil? %></div>
                                            </div>
                                        </div>
                                        
                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <div class="col-sm-4 col-sm-offset-2">
                                                <%= link_to "Cancel", {controller: 'merchants', action: 'sell'}, class: "btn btn-default" %>
                                                <button id="complete-upload-btn" type="submit" class="btn btn-primary">Save</button>
                                            </div>
                                        </div>
                                    <% end %>
                                </div>
                            </section>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6"> 
                <section class="panel panel-default"> 
                    <div class="text-center wrapper bg-light"> 
                        <div class="text-center innerbox">
                            <div id="cover-image-holder"><span style="font-size: 56px"><i class="fa fa-picture-o fa-5x m-t text-white"></i></span></div>
                        </div>
                    </div> 
                    <ul class="list-group no-radius"> 
                        <li class="list-group-item"> 
                            <span class="pull-right" id="cover-image-file-name">No name</span> 
                            <span class="label bg-primary">1</span> File Name 
                        </li> 
                        <li class="list-group-item"> <span class="pull-right" id="cover-image-file-ext">EPUB</span> 
                            <span class="label bg-info">2</span> File Type
                        </li> 
                         
                </ul> 
                </section> 
            </div>
            <% if epub_file.present? && !epub_file.nil? %>
            <% extn = File.extname epub_file.file_name.url %>
            <div class="col-sm-6"> 
                <section class="panel panel-default"> 
                    <div class="text-center wrapper bg-light"> 
                        <span style="font-size: 56px"><i class="fa fa-file-o fa-5x m-t text-white"></i></span>
                    </div> 
                    <ul class="list-group no-radius"> 
                        <li class="list-group-item"> 
                            <span class="pull-right"><%= File.basename epub_file.file_name.url, extn %></span> 
                            <span class="label bg-primary">1</span> File Name 
                        </li> 
                        <li class="list-group-item"> <span class="pull-right"><%= extn.upcase.delete! '.' %></span> 
                            <span class="label bg-info">2</span> File Type
                        </li> 
                </ul> 
                </section> 
            </div>
            <% end %>
    </div>
    </div>
</section>