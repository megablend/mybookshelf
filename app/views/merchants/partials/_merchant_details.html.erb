<!-- Validation Script -->
   <% content_for :validation do %>
       <%= stylesheet_link_tag    'validation', media: 'all', 'data-turbolinks-track' => true %>
       <%= javascript_include_tag 'validation_manifest', 'data-turbolinks-track' => true %>
   <% end %>
<!-- End Add Validation Script -->

<div class="page-title"><h2>Register Account</h2></div>
               <p>If you already have an account with us, please login at the <%= link_to "login page", "login" %>.</p>
               <%= form_for(@merchant, html: { class: 'form-horizontal'} ) do|f| %>
                    <%= # render("shared/error_messages") %>
                    <fieldset id="account">
                           <legend>Your Personal Details</legend>
                           <div class="form-group required">
                               <%= f.label :firstname, "First Name", class: "col-sm-2 control-label" %>
                               <div class="col-sm-10">
                                  <%= f.text_field :firstname, class: "form-control validate[required]", autofocus: true, placeholder: "Enter your first name" %>
                                  <span class="<%= 'form-error' if f.object.errors.include?(:firstname) %>"><%= f.object.errors[:firstname].join(raw('<br/>')) %></span>
                               </div>
                           </div>

                           <div class="form-group required">
                               <%= f.label :lastname, "Last Name", class: "col-sm-2 control-label" %>
                               <div class="col-sm-10">
                                  <%= f.text_field :lastname, class: "form-control validate[required]", placeholder: "Enter your last name" %>
                                  <span class="<%= 'form-error' if f.object.errors.include?(:lastname) %>"><%= f.object.errors[:lastname].join(raw('<br/>')) %></span>
                               </div>
                           </div>

                           <div class="form-group required">
                               <%= f.label :email, "Email", class: "col-sm-2 control-label" %>
                               <div class="col-sm-10">
                                  <%= f.text_field :email, class: "form-control validate[required,custom[email]]", placeholder: "Enter your email address" %>
                               </div>
                           </div>

                           <div class="form-group required">
                               <%= f.label :phone_number, "Telephone", class: "col-sm-2 control-label" %>
                               <div class="col-sm-10">
                                  <%= f.text_field :phone_number, class: "form-control validate[required,custom[phone-number]]", placeholder: "Enter your telephone number" %>
                               </div>
                           </div>
                    </fieldset>

                  <fieldset id="address">
                     <legend>Your Address</legend>
                     <div class="form-group required">
                           <%= f.label :address, "Address", class: "col-sm-2 control-label" %>
                           <div class="col-sm-10">
                              <%= f.text_field :address, class: "form-control validate[required]", placeholder: "Enter your residential address" %>
                           </div>
                     </div>

                     <div class="form-group required">
                       <%= f.label :city, "City", class: "col-sm-2 control-label" %>
                       <div class="col-sm-10">
                          <%= f.text_field :city, class: "form-control validate[required]", placeholder: "Enter your city" %>
                       </div>
                   </div>

                   <div class="form-group required">
                       <%= f.label :landmark, "Landmark", class: "col-sm-2 control-label" %>
                       <div class="col-sm-10">
                          <%= f.text_field :landmark, class: "form-control validate[required]", placeholder: "Enter a landmark near you" %>
                       </div>
                   </div>


                   <div class="form-group required">
                       <%= f.label :state_id, "State", class: "col-sm-2 control-label" %>
                       <div class="col-sm-10">
                          <%= f.collection_select :state_id, State.order(:name), :id, :name, { :prompt => "Select State" }, { class: "form-control" } %>
                       </div>
                   </div>
              </fieldset>

              <fieldset>
                  <legend>Your Password</legend>
                  <div class="form-group required">
                        <%= f.label :password, "Password", class: "col-sm-2 control-label" %>
                        <div class="col-sm-10">
                             <%= f.password_field :password, class: "form-control validate[required]", placeholder: "Enter a preferred password" %>
                        </div>
                  </div>

                  <div class="form-group required">
                        <%= f.label :password_confirmation, "Confirm Password", class: "col-sm-2 control-label" %>
                        <div class="col-sm-10">
                             <%= f.password_field :password_confirmation, class: "form-control validate[required, equals[password]]", placeholder: "Password Confirmation" %>
                        </div>
                  </div>
             </fieldset>
               
               <div class="buttons">
                    <div class="pull-right">I have read and agree to the <%= link_to raw('<b>Terms and Conditions</b>'), terms_path, class: "agree" %>                        
                           <%= f.check_box :terms %>
                             &nbsp;
                           <%= f.submit "Continue", class: "button" %>
                    </div>
               </div>

            <% end %>