<% provide(:title, "Sell on MYBOOKSHELF") %>
<% provide(:class_name, "information-information") %>
<% provide(:current_page, raw("<strong>Sell on MYBOOKSHELF</strong>")) %>
<!-- page wapper-->
<!-- Page -->
<div class="main-container">
  <div class="main container">
     <div class="col-main">
         <div class="row">                
            <div id="content" class="col-sm-12">

                <!-- banner -->
                <div class="container">
                   <div class="row sell-banner">
                        <div class="col-md-12 center-page">
                             <div><%= image_tag "site/sell-on-mybookshelf.png",  alt: "sell-on-mybookshelf" %></div>
